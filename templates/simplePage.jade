extends layout


block append vars
    - bodyclass = 'simplePage'

block prepend title
    | #{ page.title + " - "}

block header
    header.siteHeader.small
        div.content-wrap
            div.logo
                h1
                    a(href=locals.url)= locals.name
                p.description= locals.description

block content
    article
        h2.subhead= page.title
        section.content!= typogr(page.html).typogrify()

